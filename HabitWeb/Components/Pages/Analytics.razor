@page "/analytics"
@rendermode InteractiveServer

<PageTitle>Analytics - Habit Tracker</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h1 class="display-4">
                    <i class="fas fa-chart-line text-primary me-2"></i>
                    Analytics
                </h1>
                <p class="lead text-muted">Detailed insights into your habit progress</p>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-chart-bar fa-4x text-muted mb-4"></i>
                            <h3>Analytics Coming Soon</h3>
                            <p class="text-muted mb-4">
                                We're working on comprehensive analytics to help you track your progress over time.
                            </p>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="fas fa-chart-line fa-2x text-primary mb-2"></i>
                                            <h6>Progress Charts</h6>
                                            <small class="text-muted">Visual representation of your habit streaks and completion rates</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="fas fa-trophy fa-2x text-warning mb-2"></i>
                                            <h6>Achievement Tracking</h6>
                                            <small class="text-muted">Milestones and badges for reaching habit goals</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="fas fa-calendar-alt fa-2x text-success mb-2"></i>
                                            <h6>Time Analysis</h6>
                                            <small class="text-muted">Best times and patterns for habit completion</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="/habits" class="btn btn-primary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Habits
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>