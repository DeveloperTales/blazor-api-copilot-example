@page "/habits"
@using HabitModels.DTOs.Habits
@using HabitModels.DTOs.HabitEntries
@using HabitModels.Models
@using HabitWeb.Services
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using System.ComponentModel.DataAnnotations
@rendermode InteractiveServer

<PageTitle>My Habits</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4">
                    <i class="fas fa-bullseye text-primary me-2"></i>
                    My Habits
                </h1>
                <button class="btn btn-primary btn-lg" @onclick="OpenCreateModal">
                    <i class="fas fa-plus me-2"></i>Add New Habit
                </button>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Loading your habits...</p>
                </div>
            }
            else if (!habits.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-seedling fa-3x text-muted mb-3"></i>
                    <h3>No habits yet</h3>
                    <p class="text-muted mb-4">Start building better habits today!</p>
                    <button class="btn btn-primary" @onclick="OpenCreateModal">
                        <i class="fas fa-plus me-2"></i>Create Your First Habit
                    </button>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var habit in habits)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 habit-card @(habit.IsCompletedToday ? "completed-today" : "")" 
                                 style="border-left: 4px solid @(habit.ColorCode ?? "#007bff");">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">@habit.Name</h5>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                    type="button" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="#" @onclick="() => MarkComplete(habit.Id)">
                                                    <i class="fas fa-check me-2"></i>Mark Complete
                                                </a></li>
                                                <li><a class="dropdown-item" href="#" @onclick="() => ViewStats(habit.Id)">
                                                    <i class="fas fa-chart-line me-2"></i>View Stats
                                                </a></li>
                                                <li><a class="dropdown-item" href="#" @onclick="() => EditHabit(habit)">
                                                    <i class="fas fa-edit me-2"></i>Edit
                                                </a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" href="#" @onclick="() => DeleteHabit(habit.Id)">
                                                    <i class="fas fa-trash me-2"></i>Delete
                                                </a></li>
                                            </ul>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(habit.Category))
                                    {
                                        <span class="badge bg-secondary mb-2">@habit.Category</span>
                                    }

                                    @if (!string.IsNullOrEmpty(habit.Description))
                                    {
                                        <p class="card-text text-muted small">@habit.Description</p>
                                    }

                                    <div class="habit-stats">
                                        <div class="row text-center">
                                            <div class="col-4">
                                                <div class="stat-value">@habit.CurrentStreak</div>
                                                <div class="stat-label">Streak</div>
                                            </div>
                                            <div class="col-4">
                                                <div class="stat-value">@habit.TotalEntries</div>
                                                <div class="stat-label">Total</div>
                                            </div>
                                            <div class="col-4">
                                                <div class="stat-value">
                                                    @if (habit.IsCompletedToday)
                                                    {
                                                        <i class="fas fa-check-circle text-success"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-circle text-muted"></i>
                                                    }
                                                </div>
                                                <div class="stat-label">Today</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                Target: @habit.TargetCount @habit.Unit @(habit.Frequency.ToString().ToLower())
                                            </small>
                                            @if (!habit.IsCompletedToday)
                                            {
                                                <button class="btn btn-sm btn-success" @onclick="() => MarkComplete(habit.Id)">
                                                    <i class="fas fa-check me-1"></i>Complete
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Create/Edit Habit Modal -->
<div class="modal fade" id="habitModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(editingHabit == null ? "Create New Habit" : "Edit Habit")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="habitForm" OnValidSubmit="SaveHabit">
                    <DataAnnotationsValidator />
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Name *</label>
                        <InputText id="name" class="form-control" @bind-Value="habitForm.Name" />
                        <ValidationMessage For="() => habitForm.Name" />
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <InputTextArea id="description" class="form-control" rows="3" @bind-Value="habitForm.Description" />
                        <ValidationMessage For="() => habitForm.Description" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="category" class="form-label">Category</label>
                            <InputText id="category" class="form-control" @bind-Value="habitForm.Category" />
                            <ValidationMessage For="() => habitForm.Category" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="frequency" class="form-label">Frequency</label>
                            <InputSelect id="frequency" class="form-select" @bind-Value="habitForm.Frequency">
                                <option value="@HabitFrequency.Daily">Daily</option>
                                <option value="@HabitFrequency.Weekly">Weekly</option>
                                <option value="@HabitFrequency.Monthly">Monthly</option>
                            </InputSelect>
                            <ValidationMessage For="() => habitForm.Frequency" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="targetCount" class="form-label">Target Count</label>
                            <InputNumber id="targetCount" class="form-control" @bind-Value="habitForm.TargetCount" />
                            <ValidationMessage For="() => habitForm.TargetCount" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="unit" class="form-label">Unit</label>
                            <InputText id="unit" class="form-control" @bind-Value="habitForm.Unit" placeholder="e.g., minutes, pages, cups" />
                            <ValidationMessage For="() => habitForm.Unit" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="targetValue" class="form-label">Target Value</label>
                            <InputNumber id="targetValue" class="form-control" @bind-Value="habitForm.TargetValue" step="0.01" />
                            <ValidationMessage For="() => habitForm.TargetValue" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="colorCode" class="form-label">Color</label>
                        <div class="d-flex align-items-center">
                            <input type="color" id="colorCode" class="form-control form-control-color me-2" 
                                   value="@(habitForm.ColorCode ?? "#007bff")" 
                                   @onchange="(e) => habitForm.ColorCode = e.Value?.ToString()" />
                            <InputText class="form-control" @bind-Value="habitForm.ColorCode" placeholder="#007bff" />
                        </div>
                        <ValidationMessage For="() => habitForm.ColorCode" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            @(editingHabit == null ? "Create Habit" : "Update Habit")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

