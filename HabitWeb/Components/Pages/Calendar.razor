@page "/calendar"
@rendermode InteractiveServer

<PageTitle>Calendar - Habit Tracker</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h1 class="display-4">
                    <i class="fas fa-calendar text-primary me-2"></i>
                    Calendar View
                </h1>
                <p class="lead text-muted">Visualize your habit completions over time</p>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-calendar-alt fa-4x text-muted mb-4"></i>
                            <h3>Calendar View Coming Soon</h3>
                            <p class="text-muted mb-4">
                                We're building an interactive calendar to help you visualize your habit completion patterns.
                            </p>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                            <h6>Completion Tracking</h6>
                                            <small class="text-muted">See at a glance which days you completed your habits</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="fas fa-fire fa-2x text-danger mb-2"></i>
                                            <h6>Streak Visualization</h6>
                                            <small class="text-muted">Visual representation of your longest streaks</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="fas fa-edit fa-2x text-info mb-2"></i>
                                            <h6>Quick Entry</h6>
                                            <small class="text-muted">Add or modify habit entries directly from the calendar</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="/habits" class="btn btn-primary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Habits
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>