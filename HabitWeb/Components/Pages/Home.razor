@page "/"
@using HabitModels.DTOs.Habits
@using HabitModels.DTOs.HabitEntries
@using HabitWeb.Services
@using Microsoft.AspNetCore.Components.Web
@rendermode InteractiveServer

<PageTitle>Dashboard - Habit Tracker</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h1 class="display-4 text-gradient">
                    <i class="fas fa-chart-line me-3"></i>Dashboard
                </h1>
                <p class="lead text-muted">Track your progress and stay motivated!</p>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Loading your dashboard...</p>
                </div>
            }
            else
            {
                <!-- Quick Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Total Habits</h6>
                                        <h2 class="mb-0">@totalHabits</h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-bullseye fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Completed Today</h6>
                                        <h2 class="mb-0">@completedToday</h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-check-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Active Streaks</h6>
                                        <h2 class="mb-0">@activeStreaks</h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-fire fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 mb-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">This Week</h6>
                                        <h2 class="mb-0">@weeklyCompletion%</h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-calendar-week fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Today's Habits -->
                <div class="row">
                    <div class="col-lg-8 mb-4">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fas fa-calendar-day me-2"></i>Today's Habits
                                </h5>
                                <small class="text-muted">@DateTime.Now.ToString("dddd, MMMM dd")</small>
                            </div>
                            <div class="card-body">
                                @if (!activeHabits.Any())
                                {
                                    <div class="text-center py-4">
                                        <i class="fas fa-seedling fa-2x text-muted mb-2"></i>
                                        <p class="text-muted">No active habits found.</p>
                                        <a href="/habits" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>Add Your First Habit
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var habit in activeHabits)
                                    {
                                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3" style="width: 4px; height: 40px; background-color: @(habit.ColorCode ?? "#007bff"); border-radius: 2px;"></div>
                                                <div>
                                                    <h6 class="mb-0">@habit.Name</h6>
                                                    <small class="text-muted">
                                                        Target: @habit.TargetCount @habit.Unit
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                @if (habit.IsCompletedToday)
                                                {
                                                    <span class="badge bg-success me-2">
                                                        <i class="fas fa-check me-1"></i>Completed
                                                    </span>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => MarkComplete(habit.Id)">
                                                        <i class="fas fa-check me-1"></i>Complete
                                                    </button>
                                                }
                                                <span class="badge bg-secondary ms-2">
                                                    @habit.CurrentStreak<i class="fas fa-fire ms-1"></i>
                                                </span>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-bolt me-2"></i>Quick Actions
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="/habits" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Add New Habit
                                    </a>
                                    <a href="/habits" class="btn btn-outline-secondary">
                                        <i class="fas fa-list me-2"></i>View All Habits
                                    </a>
                                    <a href="/analytics" class="btn btn-outline-info">
                                        <i class="fas fa-chart-bar me-2"></i>View Analytics
                                    </a>
                                    <a href="/calendar" class="btn btn-outline-success">
                                        <i class="fas fa-calendar me-2"></i>View Calendar
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Motivational Quote -->
                        <div class="card mt-3">
                            <div class="card-body text-center">
                                <i class="fas fa-quote-left text-muted mb-2"></i>
                                <blockquote class="blockquote-footer mb-0">
                                    <small class="text-muted">
                                        "We are what we repeatedly do. Excellence, then, is not an act, but a habit."
                                        <br><strong>— Aristotle</strong>
                                    </small>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


